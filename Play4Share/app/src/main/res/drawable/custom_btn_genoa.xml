<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/button_stroke" />
             <gradient  android:angle="-90"  android:startColor="@color/button_pressed_start_gradient" 
                 android:endColor="@color/button_pressed_end_gradient"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/button_stroke" />
             <solid  android:color="@color/button_solid"/>       
         </shape>
     </item>  
    <item android:state_enabled="false">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/button_stroke" />
             <solid  android:color="@color/button_solid"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/button_stroke" />
             <gradient  android:angle="-90"  android:startColor="@color/button_default_start_gradient" 
                 android:endColor="@color/button_default_end_gradient" />            
         </shape>
     </item>
</selector>